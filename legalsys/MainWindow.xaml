<Window x:Class="legalsys.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:legalsys"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="invList" Margin="0,74,0,0" MouseDoubleClick="invList_DoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Label Content="Faktury" HorizontalAlignment="Left" FontSize="24" Margin="10,17,0,0" VerticalAlignment="Top" Height="52" Width="136"/>
        <Button Content="Nová faktura" HorizontalAlignment="Left" Margin="648,15,0,0" VerticalAlignment="Top" Height="46" Width="128"/>

    </Grid>
</Window>
