<Window x:Class="legalsys.NewInvoice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:legalsys"
        mc:Ignorable="d"
        Title="NewInvoice" Height="450" Width="400">
    <Grid>
        <TextBox HorizontalAlignment="Center" Margin="0,36,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" x:Name="iName"/>
        <Label Content="Název společnosti" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,85,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" x:Name="iAddress"/>
        <Label Content="Adresa sídla" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,134,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" x:Name="iCIN"/>
        <Label Content="IČO" HorizontalAlignment="Left" Margin="10,108,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Center" Margin="0,178,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PreviewTextInput="NumberValidationTextBox" Width="380" x:Name="iHours"/>
        <Label Content="Hodiny" HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" />
        <ComboBox HorizontalAlignment="Center" Margin="0,227,0,0" VerticalAlignment="Top" Width="380" x:Name="sService" SelectionChanged="sService_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Value}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Label Content="Služba" HorizontalAlignment="Left" Margin="10,201,0,0" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="10,275,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" PreviewTextInput="NumberValidationTextBox" x:Name="iPrice" Width="157"/>
        <Label Content="Hodinová sazba" HorizontalAlignment="Left" Margin="10,249,0,0" VerticalAlignment="Top" />
        <ComboBox HorizontalAlignment="Left" Margin="172,273,0,0" VerticalAlignment="Top" Width="171" x:Name="sCurrency">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Value}" />
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <Button Content="Vytvořit" Margin="248,364,10,20" Click="Button_Click"/>

    </Grid>
</Window>
